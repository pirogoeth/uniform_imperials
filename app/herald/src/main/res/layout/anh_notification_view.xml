<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/nh_card_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:paddingStart="2dp"
        android:paddingEnd="2dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:layout_gravity="center"
        card_view:cardCornerRadius="4dp"
        card_view:cardBackgroundColor="@color/subtle2_colorPrimary"
        card_view:cardElevation="2dp">

        <com.github.mmin18.widget.FlexLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_gravity="center_vertical"
                app:layout_left="5dp"
                app:layout_bottom="100%-5dp"
                app:layout_height="100%-10dp"
                app:layout_width="10%"
                android:id="@+id/nh_item_icon"
                android:elevation="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/nh_item_title"
                android:textColor="@color/subtle2_primaryTextColor"
                app:layout_left="nh_item_icon.right+10dp"
                android:textSize="18dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/nh_item_content"
                android:textColor="@color/subtle2_primaryTextColor"
                app:layout_left="nh_item_icon.right+10dp"
                app:layout_top="nh_item_title.bottom+2dp"
                app:layout_right="parent.width-5dp"
                android:singleLine="false"
                android:textSize="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/nh_item_date"
                android:textColor="@color/subtle2_primaryTextColor"
                app:layout_right="100%-2dp"
                app:layout_top="nh_item_content.bottom"
                android:layout_gravity="right"
                android:textSize="15dp" />

        </com.github.mmin18.widget.FlexLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
